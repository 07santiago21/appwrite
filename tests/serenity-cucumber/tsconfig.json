{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "commonjs",                        
    "lib": ["es2020"],                           
    "strict": true,                              
    "esModuleInterop": true,                     
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true,    
    "moduleResolution": "node",                  
    "outDir": "dist",                             
    "resolveJsonModule": true                    
  },
  "include": [
    "steps/**/*.ts",
    "tasks/**/*.ts",
    "questions/**/*.ts",
    "models/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
